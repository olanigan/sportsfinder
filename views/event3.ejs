<!-- This page contains the form that shows the events and allows the user to introduce the password to edit his/her own event-->

<% include header %>
<script>
	// $(document).on("click","addId",function(){
	// 	var myeditId = $(this).data('id');
	// 	console.log('Edit ID is ' + myeditId);
	// 	$(".edit #editId").val(myeditId);
	// });
	
	function addId(editId){
		document.getElementById("editId").value = editId;
	}
	
</script>
<body>
	<% include navbar%>

	<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="margin-top:200px;border:2px solid color:#1087dd;">
	<!--<div class="modal-dialog">-->
		<div class="modal-content">
	   		<div class="modal-body" style="background-color:#336699;">
	        	<div class="container" style="margin-top:80px;margin-left:auto;margin-right:auto;">
					<div class="row">
						<div class="col-sm-6 col-md-4 col-md-offset-4">
							<div class="panel panel-default">
								<div class="panel-heading">
									<strong> Enter Your Password To Continue</strong>
								</div>
								<div class="panel-body">
									<form role="form" action="/event/auth/" method="POST">
										<fieldset>
											<div class="row">
												<div class="center-block">
												</div>
											</div>
											<div class="row" >
												<div class="col-sm-12 col-md-10  col-md-offset-1 ">
													<div class="form-group">
														<div class="edit input-group">
															<span class="input-group-addon">
																<!--<li class="glyphicon glyphicon-user"></i>-->
															</span> 
															<input class="form-control" type="hidden" name ="editId" id="editId" value="">
															<input class="form-control" placeholder="Enter Your Password" name="pass" type="text" autofocus>
														</div>
													</div>
													<div class="form-group">
														<input type="submit" class="btn btn-lg btn-primary btn-block" value="Sign in">
													</div>
												</div>
											</div>
										</fieldset>
									</form>
								</div>
							 </div>
						</div>
					</div>
	    		</div>
	    	</div>
	  	</div>
	</div>

	<div class="row containerDown"></div>
	<h1><a href="/event/new" class="btn btn-primary btn-lg btn-block" role="button">Create your event right now!</a></h1>
	<div class="row">
  		<% events.forEach(function(event){ %>
  		<div class="col-sm-6 col-md-3">
      		<ul class="thumbnails"> 
        		<li class="span5 noOverflow">
		        <h3><%=event.Title%></h3>
          		<p><%=event.Description%></p>
                <p><button type="button" class="addId btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal" data-id="<%=event._id%>" onclick="addId('<%=event._id%>')">Edit</button></p>
        		<img class="ball" src="http://pixabay.com/static/uploads/photo/2013/07/13/10/51/football-157931_640.png">
        </ul>
        </div>
 		<% }); %>
	</div>

</body>
</html>
